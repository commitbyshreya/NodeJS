<% include('../layouts/header.ejs') %>
<h1>User Register Form</h1>

<!-- enctype="multipart/form-data" -> ensures file being uploaded is encoded -->
<form action="/user/register" method="post" enctype="multipart/form-data">

    <input type="text" id="name" name="name" placeholder="Enter Name" required><br><br>

    <input type="email" id="email" name="email" placeholder="Enter Email" required><br><br>

    <input type="phone" id="phone" name="phone" placeholder="Phone" required><br><br>

    <input type="file" id="image" name="image" placeholder="Add image" accept="image/*" required><br><br>

    <input type="password" id="password" name="password" placeholder="Enter Password" required><br><br>

    <button type="submit">Register</button><br><br>
</form>


<% if (typeof message !== 'undefined') { %>
    <p style="color: green;"><%= message %></p>
<% } else { %>
    <p></p>
<% } %>
<% include('../layouts/footer.ejs') %>